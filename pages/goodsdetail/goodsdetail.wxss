  color: #8a8a8a;
  font-size: 24rpx;
}

.bottom .right {
  display: flex;
  width: 100%;
}

.right .buy {
  width: 50%;
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 32rpx;
}

.right .join {
  background-color: #fc6f86;
}

.right .now {
